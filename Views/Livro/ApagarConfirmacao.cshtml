@model LivroModel
@{
    ViewData["Title"] = "Apagar";
}
<div class="text-center">
    <h2>Você realmente deseja remover (@Model.NomeLivro) da lista?</h2>
</div>
<!--O asp-route-id Envia a informação do id que esta definida na url para a controller-->
<a role="button" class="btn btn-danger btn-block" asp-controller="Livro" asp-action="Apagar" asp-route-id="@Model.Id">Remover</a>
<a role="button" class="btn btn-dark btn-block" asp-controller="Livro" asp-action="Index">Cancelar</a>
