@using API_Livros.Enums
@model UserModel
@{
    ViewData["Title"] = "Editar";
}
<h1>Editar Informações do Livro</h1>
<form asp-controller="User" asp-action="Editar" method="post">
    <!--Adicionando ID-->
    <input type="hidden" asp-for="UserModelId" />

    <div class="form-group">
        <label>Nome:</label>
        <!--O asp-for define onde o valor informado será atribuido-->
        <input asp-for="NameUser" type="text" class="form-control">
        @Html.ValidationMessageFor(x => x.NameUser)
    </div>
    <div class="form-group">
        <label>Usuário:</label>
        <input asp-for="LoginUser" type="text" class="form-control">
        @Html.ValidationMessageFor(x => x.LoginUser)
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="EmailUser" type="email" class="form-control">
        @Html.ValidationMessageFor(x => x.EmailUser)
    </div>
    <div class="form-group">
        <label>Perfil de Acesso: </label>
        <select class="form-control" asp-for="ProfileUser">
            <option value="">Selecione</option>
            <option value="@ProfileEnum.Adm">Administrador</option>
            <option value="@ProfileEnum.Comum">Comum</option>
        </select>
        @Html.ValidationMessageFor(x => x.ProfileUser)
    </div>
    <br />
    <button type="submit" class="btn btn-success btn-block" asp-controller="User" asp-action="Editar">Salvar</button>
    <a role="button" class="btn btn-dark btn-block" asp-controller="User" asp-action="Index">Voltar</a>

</form>